<%- include('../layout/layout.ejs') -%>

<img
  src="https://cdn.britannica.com/79/232779-050-6B0411D7/German-Shepherd-dog-Alsatian.jpg"
  alt=""
  style="
    width: 100vw;
    height: 700px;
    position: absolute;
    z-index: -1;
    filter: brightness(50%);
  "
/>

<h1
  class="d-flex align-items-center justify-content-center"
  style="color: white; font-size: 80px"
>
  Missing Pets
</h1>
<div
  class="createNewPostButton"
  style="
    display: flex;
    align-items: center;
    justify-content: end;
    margin-right: 100px;
    margin-top: 200px;
  "
>
  <a
    href="/missingvaluable/createMissingValuablePost"
    style="
      width: 250px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      background-color: #007acc;
      color: #fff;
      text-decoration: none;
      border-radius: 10px;
    "
    >Create a Post</a
  >
</div>

<section style="padding-top: 200px">
  <div class="container" style="width: 550px">
    <% valuableMissing.forEach(valuable => { %>
    <a
      href="missingpets/missingpetsnewpost/<%= pets.id %>"
      style="text-decoration: none"
    >
      <div
        class="containereachcard"
        style="
          background-color: rgb(199, 229, 221);
          border-radius: 35px;
          margin: 10px;
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
          gap: 10px;
          margin: 20px 0;
          padding: 25px 20px;
        "
      >
        <div class="containerNameAge" style="display: flex; align-self: start">
          <div class="title text-uppercase">
            <h4><%= valuable.name %>&nbsp;</h4>
          </div>
          <div class="age text-secondary">
            <h4>| <%= valuable.age %></h4>
          </div>
        </div>
        <div class="createdAt text-secondary align-self-start">
          <%= valuable.missingdate.toLocaleDateString() %>
        </div>
        <div class="image">
          <img
            src="images/missingvaluable/<%= valuable.id %>.jpg"
            alt=""
            style="width: 500px; height: auto; border-radius: 20px"
          />
        </div>
      </div>
    </a>
    <% }) %>
  </div>
</section>
