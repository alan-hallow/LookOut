<%- include('../layout/layout.ejs') -%>

<div
  class="containerCorpsesWholePage"
  style="
    margin-top: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  "
>
  <h2 class="corpsesPageTitle">Not recognised corpses</h2>

  <a
    href="/corpses/createCorpsePost"
    style="
      width: 250px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      background-color: #007acc;
      color: #fff;
      text-decoration: none;
      border-radius: 10px;
    "
    >Create a new post</a
  >
  <div
    class="containerAllCorpsesCards"
    style="
      display: grid;
      grid-template-columns: repeat(3, 300px);
      grid-template-rows: auto;
      gap: 20px;
      width: 100vw;
      margin-left: auto;
      margin-right: auto;
      margin-top: 100px;
      margin-bottom: 100px;
      place-content: center;
      align-items: center;
    "
  >
    <% corpses.sort((a, b) => new Date(b.date) - new Date(a.date));
    corpses.forEach(corpse => { %>

    <a href="corpses/corpsesnewpost/<%= corpse.id %>">
      <div
        class="containerMissingKidsCards"
        style="
          height: 400px;
          width: 300px;
          background-color: wheat;
          border-radius: 30px;
          overflow: hidden;
          display: flex;
          align-items: center;
          justify-content: center;
        "
      >
        <img
          src="images/corpses/<%= corpse.id %>.jpg"
          alt=""
          style="height: 400px"
        />
        <div
          class="containerCardOverlayTitle"
          style="
            position: absolute;
            height: 400px;
            width: 300px;
            border-radius: 29px;
            background-image: linear-gradient(
              to top,
              #000000d0,
              transparent,
              transparent
            );
            display: flex;
            align-items: flex-end;
            justify-content: center;
            color: white;
            font-size: 40px;
            padding-bottom: 10px;
          "
        >
          <h4 style="font-size: 20px; text-transform: uppercase">
            <%= corpse.place %>&nbsp;
          </h4>
          <h4 style="font-size: 20px">| <%= corpse.age %></h4>
        </div>
      </div>
    </a>

    <% }) %>
  </div>
</div>

<style>
  body {
    background-color: #091a14;
    color: white;
  }
</style>

