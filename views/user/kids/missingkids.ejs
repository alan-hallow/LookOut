<%- include('../layout/layout.ejs') -%>

<img src="https://packandbianesvision.com/wp-content/uploads/2022/06/girl-smiling-min-1024x672.jpg" alt="" style="width: 100vw; height: 700px; position: absolute; z-index: -1; filter: brightness(110%);">

<h1 class="d-flex align-items-center justify-content-center" style="color: black; font-size: 80px;">Missing Kids</h1>
<div class="createNewPostButton" style="display: flex; align-items: center; justify-content: end; margin-right: 100px; margin-top: 200px;">
    <a href="/missingkids/createMissingKidPost" style="width: 250px; height: 50px; display: flex; align-items: center; justify-content: center; font-size: 20px; background-color: #007acc; color: #fff; text-decoration: none; border-radius: 10px;">Create a Post</a>
</div>

<section>
    <div class="container" style="width: 550px; padding: 200px 0;" >
        <% childMissing.forEach(child => { %>
            <a href="missingkids/missingkidnewpost/<%= child.id %>" style="text-decoration: none;">
                <div class="containereachcard" style="background-color: rgb(207, 207, 207); border-radius: 35px; margin: 10px; display: flex; align-items: center; justify-content: center; flex-direction: column; gap: 10px; margin: 20px 0; padding: 25px 20px;">

                    <div class="containerNameAge" style="display: flex; align-self: start;">
                        <div class="title text-uppercase">
                            <h4><%= child.name %>&nbsp;</h4>
                        </div>
                        <div class="age text-secondary">
                            <h4>| <%= child.age %></h4>
                        </div>
                    </div>
                    <div class="createdAt text-secondary align-self-start">
                        <%= child.date %>
                    </div>
                    <div class="image">
                        <img src="images/missingkids/<%= child.id %>.jpg" alt="" style="width: 500px; height: auto; border-radius: 20px;">
                    </div>
                </div>
            </a>
        <% }) %>
    </div>
</section>
