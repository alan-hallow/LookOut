<%- include('../layout/layout.ejs') -%>

<img
  src="/images/LookOut/missing old man.png"
  alt=""
  class="missingKidsMainImage"
  style="width: 100vw"
/>

<div
  class="containerFirstSectionTitleParagraphMissingKids"
  style="
    position: absolute;
    top: 250px;
    right: 100px;
    color: white;
    width: 500px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 20px;
  "
>
  <h1 style="font-size: 50px">Missing Elderly</h1>

  <p style="font-size: 18px">
    Are you worried about a missing elderly loved one? Our private detective
    agency specializes in locating and reuniting missing individuals with their
    families. With our dedicated team and advanced resources, we work tirelessly
    to bring peace of mind to families during these challenging times. Trust us
    to bring your loved one home safely.
  </p>

  <a
    href="/missingelderly/createMissingElderlyPost"
    style="
      width: 250px;
      height: 50px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      background-color: #007acc;
      color: #fff;
      text-decoration: none;
      border-radius: 10px;
    "
    >Create a new post</a
  >
</div>

<section>
  <div
    class="container"
    style="
      display: grid;
      grid-template-columns: repeat(3, 300px);
      grid-template-rows: auto;
      gap: 20px;
      width: 100vw;
      margin-left: auto;
      margin-right: auto;
      margin-top: 100px;
      place-content: center;
      align-items: center;
    "
  >
    <% elderlyMissing.sort((a, b) => new Date(b.date) - new Date(a.date));
    elderlyMissing.forEach(elderly => { %>

    <a href="missingelderly/missingelderlynewpost/<%= elderly.id %>">
      <div
        class="containerMissingKidsCards"
        style="
          height: 400px;
          width: 300px;
          background-color: wheat;
          border-radius: 10px;
          overflow: hidden;
          display: flex;
          align-items: center;
          justify-content: center;
        "
      >
        <img
          src="images/missingelderly/<%= elderly.id %>.jpg"
          alt=""
          style="height: 400px"
        />
        <div
          class="containerCardOverlayTitle"
          style="
            position: absolute;
            height: 400px;
            width: 300px;
            border-radius: 9px;
            background-image: linear-gradient(
              to top,
              #000000d0,
              transparent,
              transparent
            );
            display: flex;
            align-items: flex-end;
            justify-content: center;
            color: white;
            font-size: 40px;
            padding-bottom: 10px;
          "
        >
          <h4 style="font-size: 20px; text-transform: uppercase">
            <%= elderly.name %>&nbsp;
          </h4>
          <h4 style="font-size: 20px">| <%= elderly.age %></h4>
        </div>
      </div>
    </a>

    <% }) %>
  </div>
</section>

<style>
  body {
    background-color: #1d1d1d;
  }
  .containerMissingKidsDisplayEachCard:hover {
    text-decoration: none;
    color: #007acc;
  }
</style>
<%- include('../partials/footer.ejs') -%>
