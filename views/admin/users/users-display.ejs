<%- include('../layout/admin-layout.ejs') -%>

<div
  class="containerUsersDisplayWhole"
  style="
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 100px;
  "
>
  <div class="containerUsersName">
    <h1 class="UsersNameTitle">Name</h1>
    <h1
      class="UsersName"
      style="
        height: 70px;
        width: 500px;
        border: 2px solid #2c2c2c;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <%- usersDetails.name %>
    </h1>
  </div>
  <div class="containerUsersEmail">
    <h1 class="UsersEmailTitle">Email</h1>
    <h1
      class="UsersEmail"
      style="
        height: 70px;
        width: 500px;
        border: 2px solid #2c2c2c;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <%- usersDetails.email %>
    </h1>
  </div>
  <div class="containerUsersPhone">
    <h1 class="UsersPhoneTitle">Phone</h1>
    <h1
      class="UsersPhone"
      style="
        height: 70px;
        width: 500px;
        border: 2px solid #2c2c2c;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <%- usersDetails.phone %>
    </h1>
  </div>
  <div class="containerUsersPlace">
    <h1 class="UsersPlaceTitle">Place</h1>
    <h1
      class="UsersPlace"
      style="
        height: 70px;
        width: 500px;
        border: 2px solid #2c2c2c;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
      "
    >
      <%- usersDetails.place %>
    </h1>
  </div>

  <div
    class="containerUsersNotificationForm"
    style="
      width: 800px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      margin-top: 50px;
      margin-bottom: 50px;
    "
  >
    <h1 class="notificationForUser">
      Messages/Notification for <%- usersDetails.name %>
    </h1>
    <form action="/admin/users/notification" method="post">
      <div
        class="containerFormUserNotification"
        style="
          display: flex;
          align-items: end;
          justify-content: center;
          flex-direction: column;
          gap: 20px;
          margin-top: 30px;
        "
      >
        <input
          type="text"
          name="postId"
          value="<%- usersDetails.id %>"
          required
          style="display: none"
        />
        <textarea
          name="notification"
          placeholder="Input the message..."
          style="
            height: 150px;
            width: 800px;
            resize: vertical;
            border-radius: 10px;
            outline: none;
            background-color: black;
            color: white;
            font-size: 30px;
            padding: 10px;
            border: 2px solid #2c2c2c;
          "
        ></textarea>
        <button
          type="submit"
          style="
            height: 50px;
            width: 100px;
            background-color: #007aff;
            border-radius: 10px;
            border: none;
            color: white;
            font-size: 20px;
            cursor: pointer;
          "
        >
          Submit
        </button>
      </div>
    </form>
  </div>

  <div
    class="containerOlderNotification"
    style="margin-bottom: 200px; font: 30px"
  >
    <% usersNotificationDetails.forEach(notification => { %>
    <div
      class="containerUserNotification"
      style="
        width: 800px;
        padding: 20px;
        background-color: #1f1f1f;
        border-radius: 10px;
        display: flex;
        align-items: start;
        justify-content: center;
        flex-direction: column;
        gap: 20px;
        margin-top: 10px;
        font-size: 30px;
      "
    >
      <h1 class="notificationContent" style="margin: 0">
        <%= notification.notification %>
      </h1>
      <h6 class="notificationDate" style="margin: 0">
        <%=notification.createddate.toLocaleDateString() %>
      </h6>
    </div>

    <% }) %>
  </div>

  <style>
    body {
      background-color: black;
      color: white;
    }
  </style>
</div>
